RewriteEngine on

# home + reference
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ([a-zA-Z_-]+)/([a-zA-Z0-9_-]+) index.php?action=$1&ref=$2 [L]

# home
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ([a-zA-Z_-]+) index.php?action=$1 [L]